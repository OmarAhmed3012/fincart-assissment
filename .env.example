# Common
NODE_ENV=development
LOG_LEVEL=info

# gateway-api
API_PORT=3000
ACK_TIMEOUT_MS=2000
SIGNING_SECRET=replace-with-api-signing-secret
SIGNATURE_TOLERANCE_SECONDS=300

# gateway-worker
WORKER_CONCURRENCY=10
WORKER_DRAIN_TIMEOUT_MS=15000

# Redis
REDIS_URL=redis://localhost:6379
QUEUE_PREFIX=fincart
QUEUE_MAIN_NAME=courier-events-main
QUEUE_DLQ_NAME=courier-events-dlq

# Mongo
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=fincart_gateway
MONGO_MIN_POOL_SIZE=1
MONGO_MAX_POOL_SIZE=20

# Retry/Backoff
RETRY_MAX_ATTEMPTS=5
RETRY_BACKOFF_BASE_MS=1000
RETRY_BACKOFF_MULTIPLIER=2
RETRY_JITTER_PERCENT=20

# Data retention
PROCESSED_EVENTS_TTL_DAYS=30
DLQ_TTL_DAYS=90

# Load test
LOADTEST_TARGET_URL=http://localhost:3000/v1/events/courier
LOADTEST_CONCURRENCY=100
LOADTEST_TOTAL_REQUESTS=1000
